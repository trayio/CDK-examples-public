{
	"compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true, 
        "strictNullChecks": true,                       
        "noImplicitThis": true,            
        "useUnknownInCatchVariables": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "Node16",
        "module": "Node16"
  }
}
